# ============================================
# Telegram Bot配置
# ============================================

# Telegram Bot Token（必填）
# 从 @BotFather 获取
NEXT_PUBLIC_TELEGRAM_BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11

# Telegram Bot Username（必填）
NEXT_PUBLIC_TELEGRAM_BOT_USERNAME=DiceTreasureBot

# ============================================
# API配置
# ============================================

# 后端API地址（必填）
NEXT_PUBLIC_API_URL=https://api.dicetreasure.io

# API密钥（用于服务端请求）
API_SECRET_KEY=your_api_secret_key_here

# ============================================
# 支付配置
# ============================================

# USDT TRC20钱包地址（必填）
NEXT_PUBLIC_USDT_TRC20_ADDRESS=TXs7nYourTRC20WalletAddressHere

# USDT ERC20钱包地址（可选）
NEXT_PUBLIC_USDT_ERC20_ADDRESS=0xYourERC20WalletAddressHere

# TON钱包地址（可选）
NEXT_PUBLIC_TON_ADDRESS=EQYourTONWalletAddressHere

# TronGrid API Key（用于监听TRC20交易）
TRONGRID_API_KEY=your_trongrid_api_key

# Etherscan API Key（用于监听ERC20交易）
ETHERSCAN_API_KEY=your_etherscan_api_key

# ============================================
# 功能开关
# ============================================

# 是否启用3D骰子动画（true/false）
NEXT_PUBLIC_ENABLE_3D=true

# 是否启用Telegram通知（true/false）
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# 是否启用VIP系统（true/false）
NEXT_PUBLIC_ENABLE_VIP=true

# 是否启用邀请系统（true/false）
NEXT_PUBLIC_ENABLE_INVITE=true

# ============================================
# 游戏配置
# ============================================

# 单局倒计时（秒）
NEXT_PUBLIC_GAME_COUNTDOWN=30

# 最小下注金额（USDT）
NEXT_PUBLIC_MIN_BET=10

# 最大下注金额（USDT）
NEXT_PUBLIC_MAX_BET=10000

# 最小充值金额（USDT）
NEXT_PUBLIC_MIN_DEPOSIT=10

# 最小提现金额（USDT）
NEXT_PUBLIC_MIN_WITHDRAW=50

# 提现手续费比例（%）
NEXT_PUBLIC_WITHDRAW_FEE=2

# ============================================
# 数据库配置（服务端使用）
# ============================================

# PostgreSQL连接字符串
DATABASE_URL=postgresql://user:password@localhost:5432/dicetreasure

# Redis连接字符串
REDIS_URL=redis://localhost:6379

# ============================================
# 第三方服务
# ============================================

# Sentry错误追踪（可选）
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics（可选）
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# ============================================
# 开发模式配置
# ============================================

# 开发模式（development/production）
NODE_ENV=development

# 是否显示调试信息
NEXT_PUBLIC_DEBUG=true

# Mock数据模式（开发时使用）
NEXT_PUBLIC_USE_MOCK=false

# ============================================
# 安全配置
# ============================================

# JWT密钥（用于生成用户token）
JWT_SECRET=your_jwt_secret_key_here_should_be_very_long_and_random

# 加密盐值
ENCRYPTION_SALT=your_encryption_salt_here

# Session密钥
SESSION_SECRET=your_session_secret_here

# ============================================
# 邮件配置（可选，用于通知）
# ============================================

# SMTP服务器
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# ============================================
# KYC验证配置（可选）
# ============================================

# KYC服务提供商API Key
KYC_API_KEY=your_kyc_api_key

# KYC服务提供商URL
KYC_API_URL=https://api.kyc-provider.com

# ============================================
# CDN配置（可选）
# ============================================

# CDN域名
NEXT_PUBLIC_CDN_URL=https://cdn.dicetreasure.io

# ============================================
# 监控和日志
# ============================================

# 日志级别（debug/info/warn/error）
LOG_LEVEL=info

# 是否启用请求日志
ENABLE_REQUEST_LOGGING=true

# ============================================
# 其他配置
# ============================================

# 网站域名
NEXT_PUBLIC_SITE_URL=https://dicetreasure.io

# 支持的语言（逗号分隔）
NEXT_PUBLIC_SUPPORTED_LANGUAGES=en,zh,ru

# 默认语言
NEXT_PUBLIC_DEFAULT_LANGUAGE=en

# 时区
TZ=UTC
